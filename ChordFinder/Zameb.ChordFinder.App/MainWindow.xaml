<Window x:Class="Zameb.ChordFinder.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Zameb.ChordFinder.App"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowVm/>
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding OpenSongCommand}">Open...</Button>
            <TextBlock Text="{Binding SongName}"/>
        </StackPanel>
        <ListView DockPanel.Dock="Left" ItemsSource="{Binding Tracks}">
        </ListView>
        <ListView DockPanel.Dock="Left" ItemsSource="{Binding Chords}">
        </ListView>
        <Grid></Grid>
    </DockPanel>
</Window>
